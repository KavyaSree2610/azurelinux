{
  "Disks": [
      {
          "PartitionTableType": "gpt",
          "MaxSize": 4096,
          "Artifacts": [
              {
                  "Name": "cvm",
                  "Type": "vhdx"
              }
          ],
          "Partitions": [
              {
                  "ID": "efi",
                  "Flags": [
                      "esp",
                      "boot"
                  ],
                  "Start": 1,
                  "End": 513,
                  "FsType": "fat32"
              },
              {
                  "ID": "boot",
                  "Start": 513,
                  "End": 1013,
                  "FsType": "ext4"
              },
              {
                  "ID": "rootfs",
                  "Name": "rootfs",
                  "Start": 1013,
                  "End": 0,
                  "FsType": "ext4"
              }
          ]
      }
  ],
  "SystemConfigs": [
      {
          "Name": "Standard",
          "BootType": "efi",
          "PartitionSettings": [
              {
                  "ID": "efi",
                  "MountPoint": "/boot/efi",
                  "MountOptions" : "umask=0077"
              },
              {
                  "ID": "boot",
                  "MountPoint": "/boot"
              },
              {
                  "ID": "rootfs",
                  "MountPoint": "/"
              }
          ],
          "PackageLists": [
              "packagelists/hyperv-packages.json",
              "packagelists/core-packages-image.json",
              "packagelists/cloud-init-packages.json",
              "packagelists/cvm-packages.json"
          ],
          "PostInstallScripts": [
              {
                  "Path": "postinstallscripts/cvm.sh"
              }
          ],
          "KernelOptions": {
              "default": "kernel"
          },
          "Hostname": "azurelinux"
      }
  ]
}
