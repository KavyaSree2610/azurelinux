{
  "Disks": [
      {
          "PartitionTableType": "gpt",
          "MaxSize": 2048,
          "Artifacts": [
              {
                  "Name": "cvm",
                  "Type": "vhdx"
              }
          ],
          "Partitions": [
              {
                  "ID": "efi",
                  "Flags": [
                      "esp",
                      "boot"
                  ],
                  "Start": 1,
                  "End": 513,
                  "FsType": "fat32"
              },
              {
                  "ID": "rootfs",
                  "Start": 513,
                  "End": 0,
                  "FsType": "ext4"
              }
          ]
      }
  ],
  "SystemConfigs": [
      {
          "Name": "Standard",
          "BootType": "efi",
          "PartitionSettings": [
              {
                  "ID": "efi",
                  "MountPoint": "/efi",
                  "MountOptions" : "umask=0077"
              },
              {
                  "ID": "rootfs",
                  "MountPoint": "/"
              }
          ],
          "PackageLists": [
              "packagelists/base-image-packages.json",
              "packagelists/cloud-init-packages.json",
              "packagelists/cvm-packages.json"
          ],
          "KernelOptions": {
              "default": "kernel"
          },
          "AdditionalFiles": {
              "additionalconfigs/macros.excludedocs": "/usr/lib/rpm/macros.d/macros.excludedocs"
          },
          "FinalizeImageScripts": [
              {
                  "Path": "postinstallscripts/cvm.sh"
              },
              {
                  "Path": "scripts/cleanup.sh"
              }
          ],
          "Hostname": "azurelinux"
      }
  ]
}
